// Prisma schema для мини-приложения закрытого клуба

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Пользователи
model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String
  telegramId    String?  @unique
  hasAccess     Boolean  @default(false)
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Подписка
  subscription  Subscription?
  
  // Связи
  favorites     Favorite[]
  referrals     Referral[] @relation("ReferrerUser")
  referredBy    Referral?  @relation("ReferredUser")
  chatMessages  ChatMessage[]
  
  @@map("users")
}

// Подписки
model Subscription {
  id          String            @id @default(cuid())
  userId      String            @unique
  type        SubscriptionType
  status      SubscriptionStatus
  expiresAt   DateTime
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  
  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("subscriptions")
}

// Категории уроков
model Category {
  id            String   @id @default(cuid())
  name          String   @unique
  description   String?
  coverImage    String?
  sortOrder     Int      @default(0)
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  lessons       Lesson[]
  
  @@map("categories")
}

// Уроки
model Lesson {
  id            String   @id @default(cuid())
  title         String
  description   String
  content       String?
  videoUrl      String?
  thumbnailUrl  String?
  duration      Int      // в секундах
  sortOrder     Int      @default(0)
  isPublished   Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  categoryId    String
  category      Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  
  // Связи
  favorites     Favorite[]
  tags          LessonTag[]
  
  @@map("lessons")
}

// Теги для уроков
model Tag {
  id        String      @id @default(cuid())
  name      String      @unique
  color     String?     // HEX цвет тега
  createdAt DateTime    @default(now())
  
  lessons   LessonTag[]
  
  @@map("tags")
}

// Связь уроков и тегов (многие ко многим)
model LessonTag {
  lessonId  String
  tagId     String
  
  lesson    Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  tag       Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)
  
  @@id([lessonId, tagId])
  @@map("lesson_tags")
}

// Избранное
model Favorite {
  id        String   @id @default(cuid())
  userId    String
  lessonId  String
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  
  @@unique([userId, lessonId])
  @@map("favorites")
}

// Рефералы
model Referral {
  id             String   @id @default(cuid())
  referrerId     String
  referredUserId String   @unique
  earnedAmount   Int      @default(0) // в копейках
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  referrer       User     @relation("ReferrerUser", fields: [referrerId], references: [id], onDelete: Cascade)
  referredUser   User     @relation("ReferredUser", fields: [referredUserId], references: [id], onDelete: Cascade)
  
  @@map("referrals")
}

// Сообщения в чате
model ChatMessage {
  id        String   @id @default(cuid())
  content   String
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  
  @@map("chat_messages")
}

// Эфиры
model Stream {
  id            String      @id @default(cuid())
  title         String
  description   String?
  streamUrl     String?
  thumbnailUrl  String?
  scheduledAt   DateTime?
  startedAt     DateTime?
  endedAt       DateTime?
  status        StreamStatus @default(SCHEDULED)
  isRecorded    Boolean     @default(false)
  recordingUrl  String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  @@map("streams")
}

// Промпты
model Prompt {
  id          String      @id @default(cuid())
  title       String
  description String?
  content     String
  category    String
  isPublished Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  @@map("prompts")
}

// Инструменты
model Tool {
  id          String   @id @default(cuid())
  title       String
  description String?
  url         String?
  iconUrl     String?
  category    String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("tools")
}

// Енумы
enum SubscriptionType {
  BASIC
  PREMIUM
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  CANCELLED
  PENDING
}

enum StreamStatus {
  SCHEDULED
  LIVE
  ENDED
  CANCELLED
}
